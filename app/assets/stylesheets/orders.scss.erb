$green: #009f34;
$blue: #292d45;



/*____________Delivery Info Page____________*/

#delivFormDiv {
	margin-top: 100px;
	text-align: center;
	form {
		width: 250px;
		margin: auto;
		text-align: right;
	}
	label {
		font-size: 18px;
		color: white;
	}
	input[type=submit] {
		margin-right: 25%;
		background-color: $green;
		color: white;
		font-size: 18px;
	}
}



/*____________New Order Page____________*/

iframe {
	width: 60%;
	margin-left: 20%;
	height: 100%;
	margin-top: 100px;
	/*border: 10px solid $blue;*/
	/*border-radius: 15px;*/

}

@media(max-width: 768px) {
	iframe {
		width: 96%;
		margin-left: 2%;
	}
}

.checkoutContainer {
	margin-top: 100px;
	text-align: center;
	color: $green;
}

#cc-form {
	width: 90vw;
	max-width: 500px;
	text-align: right;

	label {
		font-size: 20px;
		font-family: "Raleway";
	}

	.exp {
		width: 50px;
	}

	
}

/*____________Order Show Page____________*/

.orderContainer {
	margin-top: 100px;
	text-align: center;
	color: white;

	h1 {
		/*color: $green;*/
		font-size: 100px;
		font-family: "HaloHandletter";
	}

	.subHeading {
		font-size: 22px;
	}
}

	@media(max-width: 767px) {
		.orderContainer {
			h1 {
				font-size: 54px !important;
			}
		}
	}

.orderInfoDiv {
	width: 80%;
	margin: 50px 10%;

	p {
		font-size: 24px;
	}
}

.orderTable {
	text-align: center;
	max-width: 800px;
	margin: auto;

	.dishName {
		font-family: "Runaway";
	}

	td {
		/*color: $green;*/
		/*font-family: 'Poiret One';
		font-weight: bold;*/
		font-size: 28px;
	}
}

