$green: #009f34;
$blue: #292d45;

.categoriesContainer {
	margin: auto;
	margin-top: 100px;
	text-align: center;

	h1 {
		font-family: 'Poiret One';
		color: white;
		font-size: 64px;
		margin-top: 0;
	}

	h3 {
		color: white;
		font-family: 'Poiret One';
		font-size: 32px;
		margin-top: 0;
	}
}

.categoryBtn {
	margin: 50px auto;
	height: 250px;
	width: 400px;
	border: inset 1px solid #333;
	border-radius: 10px;
	background-size: cover;
	margin: 20px;
	padding: 0;

	p {
		font-family: "Runaway";
		font-size: 80px;
		color: white;
		width: 100%;
		height: 100%;
		padding-top: 70px;
		border-radius: 10px;
		background-color: rgba(0,50,50,.3);
	}

	p:hover {
		background-color: rgba(0,0,0,.4);
	}
}


@media(max-width: 479px) {

	.categoriesContainer {
		 h1 {
			font-size: 32px;
			width: 90%;
			margin-left: 5%;
			margin-top: 0;
		}
	}

	.categoryBtn {
		width: 94%;
		height: 120px;
		margin: 10px 3%;
		background-position: center;
		p {
			font-size: 60px;
			padding-top: 25px;
		}

	}

}

#SundaesCategoryBtn {
	background-image: url("<%= asset_path('dish_pics/sundaesBtn.jpg') %>");
}

