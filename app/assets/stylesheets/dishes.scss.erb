$green: #009f34;
$blue: #292d45;

body {
	height: 100vh;
	/*background-color: #eee;*/
	
}

.headerOverlay {
	width: 100vw;
	height: 350px;
	background-color: rgba(0,0,0,.3);
	position: absolute;
	top: 0;
	/*z-index: 1;*/
}

.categoryHeader {
	/**/
	width: 100vw;
	height: 350px;

	h1, .tagline {
		margin-top: 20px;
		position: relative;
		z-index: 10;
		text-align: center;
		margin: auto;
	}

	h1 {
		padding-top: 20px;
		top: 110px;
		width: 35%;
		min-width: 500px;
		text-align: center;
		color: white;
		font-size: 120px;
		border: 5px solid $blue;
		/*background-color: $green*/
		/*border-bottom: none;*/
	}

	.tagline {
		padding: 10px 10px 5px 10px;
		font-size: 36px;
		top: 85px;
		color: white;
		background-color: $blue;
		/*border-radius: 5px;*/
		width: 390px;
		margin: auto;
	}
}

@media(max-width: 767px) {
	.headerOverlay, .categoryHeader {
		height: 220px;
		h1 {
			padding: 20px 0 10px 0;
			top: 70px;
			min-width: 300px;
			font-size: 72px;
		}

		.tagline {
			top: 50px;
			width: 225px;
			font-size: 20px;
		}
	}
}

.SundaesHeader {
	background: url("<%= asset_path('dish_pics/sundaeBanner.jpg') %>");
	background-position: center;
}

.SaladsHeader {
	background: url("<%= asset_path('dish_pics/saladsBanner.jpg') %>");
}

.categoryHeader {
		background-size: cover;
}



.categoriesLink {
	display: block;
	text-align: center;
	font-size: 24px;
	text-decoration: underline;
	color: white;
	font-family: 'Raleway';
}

.quantityField {
	width: 40px;
	text-align: center;
}

.addToCartBtn {
	margin-top: 20px;
	background-color: $green;
	color: white;
	/*padding: 15px 20px;*/
	/*width: 150px;
	margin: auto;*/
}

.addToCartBtn:hover {
	background-color: $blue;
	color: white;
}

.toppedWith {
	font-family: 'HaloHandletter';
	color: #f0ea86;
	font-size: 36px;
	/*font-weight: bolder;*/
	width: 90px;
	text-align: center;
	transform: rotate(-5deg);
	position: absolute;
	left: -45px;
	/*margin-top: 10px;*/
	line-height: 95%;
	/*height: 150px;*/
}

@media(max-width: 767px) {
	.toppedWith {
		display: none;
	}
}

.dishDescription {
	color: white;
	font-family: "Raleway";
	font-weight: 600;
	font-size: 18px;
}

.dishesContainer, #showDishContainer {
	width: 90%;
	margin: 1% 0 0 5%;

	h2, h3 {
		color: white;
		text-align: center;
		text-decoration: underline;
		font-family: 'Runaway';
	}

	h2 {
		font-size: 48px;
	}

	h3 {
		margin-bottom: 20px;
	}

	.row {
		padding-top: 25px;
	}

	.row > div {
		padding: 20px 40px;
	}

	.col-md-5:first-of-type {
		margin-left: 4.5%;
	}

	.underline {
		border-bottom: dotted 2px grey;
		font-size: 36px;
		color: $green;

		a {
			font-family: 'Runaway';
		}
	}

	.price {
		float: right;
		font-size: 38px;
		font-family: 'HaloHandletter';
		/*font-weight: bold;*/
	}
}

@media(max-width: 767px) {

	.dishesContainer {
		width: 90%;
		margin-left: 5%;

		
		.row > div {
			/*border: 1px solid red;*/
			padding: 20px 0;
		}

		.underline {
			font-size: 28px;
			.price {
				font-size: 32px;
			}
		}
	}
}

.dressingListDiv {
	width: 100%;
	background-color: $green;
	color: black;
	font-size: 18px;
	font-family: 'Raleway';
	font-weight: 600;
	padding: 10px 0 20px 0;
	margin: 0 auto;

	h1 {
		color: white;
		text-align: center;
	}
}

.dressingList {
	width: 100%;
	margin: 0;
	text-align: center;
}

@media(min-width: 992px) {
	.dressingList {
	list-style: initial;
	width: 94%;
	margin-left: 3%;
	text-align: left;
}
}



.dressingListRow {
}

.dishContainer {
	margin-bottom: 40px;	
}


.dishContainer button {
		text-align: center;
	}


/*_________________Dish Show Page Styles_________________*/

#showDishContainer {
	width: 80%;
	margin: 150px auto;
	text-align: center;

	h2 {
		color: $green;
		font-family: 'Runaway';
		text-decoration: unset;
	}

	h3 {
		color: $green;
		font-size: 36px;
	}

	.showDishPic {
		width: 250px;
		margin-bottom: 20px;
		border: 10px solid $blue;
	}

	label {
		font-family: "Chelsea Market";
		font-size: 18px;
		color: white;
	}
}

@media(min-width: 768px) {
	#showDishContainer {
		width: 40%;
	}
}





/*_________________New Dish Page Styles_________________*/

#newDishContainer {
	width: 80%;
	margin: 20vh 0 0 10%;

	h1 {
		text-align: center;
		color: $blue;
		font-size: 54px;
	}
}
