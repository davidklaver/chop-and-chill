$green: #009f34;
$blue: #292d45;

body {
	height: 100vh;
	/*background-color: #eee;*/
	
}

.headerOverlay {
	width: 100vw;
	height: 350px;
	background-color: rgba(0,0,0,.4);
	position: absolute;
	top: 0;
	/*z-index: 1;*/
}

.categoryHeader {
	/**/
	width: 100vw;
	height: 350px;

	h1 {
		padding-top: 150px;
		position: relative;
		z-index: 10;
	}
}

@media(max-width: 767px) {
	.headerOverlay, .categoryHeader {
		height: 200px;

		h1 {
			padding-top: 100px;
		}
	}
}

.SundaesHeader {
	background: url("<%= asset_path('dish_pics/sundaeBanner.jpg') %>");
	background-size: cover;
	background-position: top;
}

.quantityField {
	width: 40px;
	text-align: center;
}

.addToCartBtn {
	margin-top: 20px;
	background-color: $green;
	color: white;
	/*padding: 15px 20px;*/
	/*width: 150px;
	margin: auto;*/
}

.addToCartBtn:hover {
	background-color: $blue;
	color: white;
}

.dishesH1 {
		text-align: center;
		color: white;
		font-size: 72px;
		margin: auto;
		/*	text-decoration: underline; */
		font-family: "Runaway";
	}

.dishDescription {
	color: white;
	font-family: "Raleway";
	font-weight: 600;
	font-size: 18px;
	/*width: 400px;*/
}

.dishesContainer, #showDishContainer {
	width: 90%;
	margin: 1% 0 0 5%;

	h2 {
		color: white;
		text-align: center;
		text-decoration: underline;
		font-family: 'Runaway';
	}

	h3 {
		text-align: center;
	}

	.row {
		padding-top: 25px;
	}

	.row > div {
		/*border: 1px solid red;*/
		padding: 20px 40px;
	}

/*	p {
		color: $blue;

	}*/

	.underline {
		border-bottom: dotted 2px grey;
		font-size: 36px;
		color: $green;

		a {
			font-family: 'Runaway';
		}
	}

	.price {
		float: right;
	}
}

@media(max-width: 767px) {

	.dishesH1 {
			font-size: 54px;
		}

	.dishesContainer {
		width: 90%;
		margin-left: 5%;

		
		.row > div {
			/*border: 1px solid red;*/
			padding: 20px 0;
		}
	}
}

.dishContainer {
	margin-bottom: 40px;	
}


.dishContainer button {
		text-align: center;
	}


/*_________________Dish Show Page Styles_________________*/

#showDishContainer {
	width: 80%;
	margin: 150px auto;
	text-align: center;

	h2 {
		color: $green;
		font-family: 'Runaway';
		text-decoration: unset;
	}

	h3 {
		color: $green;
		font-size: 36px;
	}

	label {
		font-family: "Chelsea Market";
		font-size: 18px;
		color: white;
	}
}

@media(min-width: 768px) {
	#showDishContainer {
		width: 40%;
	}
}





/*_________________New Dish Page Styles_________________*/

#newDishContainer {
	width: 80%;
	margin: 20vh 0 0 10%;

	h1 {
		text-align: center;
		color: $blue;
		font-size: 54px;
	}
}
