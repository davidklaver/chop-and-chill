<h1 class="dishesH1">Please Choose a Dish to Order:</h1>
<div class="container dishesContainer">
  <div class="row">
	  <% @categories.each do |category| %>
		    <div class="col-xs-12 col-md-6">
		    	<h2><%= category.name %></h2>
	  			<% if category.subcategories.any? %>
	  				<% category.subcategories.each do |subcategory| %>
	  					<h3><%= subcategory.name %></h3>
		     			<% subcategory.dishes.order(:price).each do |dish| %>
		      			<div class="dishContainer">
									<p class="underline"><a href="/dishes/<%= dish.id %>"><%= dish.name %></a><span class=price><%= dish.price %></span></p>
									<p><%= dish.description %></p>	
								</div><!-- end dishContainer -->
							<% end %><!-- end subcategory.dishes.order(:price).each -->
						<% end %><!-- end subcategories.each -->
					<% else %> <!-- if there are no subcategories -->
						<% category.dishes.order(:price).each do |dish| %>
							<div class="dishContainer">
								<p class="underline"><a href="/dishes/<%= dish.id %>"><%= dish.name %></a><span class=price><%= dish.price %></span></p>
								<p><%= dish.description %></p>
							</div><!-- end dishContainer -->
						<% end %><!-- end category.dishes.order(:price).each -->
		  		<% end %> <!-- end if -->
		    </div><!-- end col -->
		<% end %> <!-- end @categories.each -->
  </div><!-- end row -->
</div> <!-- end dishesContainer -->

