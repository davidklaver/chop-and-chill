
<%= form_tag route, method: form_method do %>
	<p><%= label_tag :name %>
	<%= text_field_tag :name, @dish.name %></p>
	<p><%= label_tag :price %>
	<%= text_field_tag :price, @dish.price %></p>
	<p><%= label_tag :description %>
	<%= text_field_tag :description, @dish.description %></p>
	<p><%= label_tag :category %>
	<%= text_field_tag :category, @dish.category %></p>
	<%= submit_tag message %>
<% end %>