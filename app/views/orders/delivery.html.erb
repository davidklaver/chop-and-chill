<div id="deliveryDiv">
	<div id="delivFormDiv">
		<h1>Please enter your delivery information:</h1>
		<p>( Please note: We only deliver to the areas listed below. )</p>
		<%= form_tag "/orders/new", method: :get do %>
			<p><%= label_tag "Name:" %>
			<%= text_field_tag :xShipLastName %></p>
			<p><%= label_tag "Street:" %>
			<%= text_field_tag :xShipStreet %></p>
			<p><%= label_tag "City:" %>
				<%= select_tag :xShipCity, options_for_select(@delivery_areas.collect { |delivery_area| [ delivery_area.name, delivery_area.name ] }) %>
			</p>
			<p><%= label_tag "Zip:" %>
			<%= text_field_tag :xShipZip %></p>
			<%= submit_tag "Continue" %>
		<% end %>
	</div>
	<div id="deliveryAreaDiv">
		<% @delivery_areas.each do |da| %>
			<p><%= "#{da.name} - #{number_to_currency(da.price)}" %></p>
		<% end %>
	</div>
</div>
