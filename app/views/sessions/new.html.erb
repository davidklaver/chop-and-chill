<div class="container signupContainer">
	<div class="formDiv">
		<h1>Login</h1>
		<p>Don't have an account? Click <a href="/signup">here</a> to sign up.</p>
		<%= form_tag '/login', method: :post do %>
		  <div class="fieldDiv">
		    <%= label_tag :email %>
		    <%= text_field_tag :email %>
		  </div>
		  <div class="fieldDiv">
		    <%= label_tag :password %>
		    <%= password_field_tag :password %>
		  </div>
		  <%= submit_tag "Submit", :class => "btn btn-primary submitBtn addToCartBtn" %>
		<% end %>
	</div>

</div>