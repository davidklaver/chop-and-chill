<div class="container signupContainer">
	<div class="formDiv">
	<h1>Sign up!</h1>
		<%= form_tag "/users", method: "post" do  %>
		  <div class="fieldDiv">
		    <%= label_tag :name %>
		    <%= text_field_tag :name %>
		  </div>
		  <div class="fieldDiv">
		    <%= label_tag :email %>
		    <%= text_field_tag :email %>
		  </div>
		  <div class="fieldDiv">
		    <%= label_tag :password %>
		    <%= password_field_tag :password %>
		  </div>
		  <div class="fieldDiv">
		    <%= label_tag :password_confirmation %>
		    <%= password_field_tag :password_confirmation %>
		  </div>
		  <%= submit_tag "Submit", :class => "btn btn-primary submitBtn" %>
		<% end %>
	</div>
</div>